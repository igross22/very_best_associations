<div class="page-header">
  <h3>Neighborhood #<%= @neighborhood.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @neighborhood.name %></dd>

      <dt>City</dt>
      <dd><%= @neighborhood.city %></dd>

      <dt>Venues</dt>
      <dd>
        <ul class="list-group">
          <% @neighborhood.favorites.each do |favorite| %>
            <li class="list-group-item">
              <%= favorite.venue.name %>
            </li>
           <% end %>
      </dd>
      <dd>
        <form action="/create_neighborhood" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="control-label">
              Name
            </label>
            <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="Name">
          </div>

          <!-- Label and input for city -->
          <div class="form-group">
            <label for="city" class="control-label">
              Address
            </label>
            <input type="text" id="city" name="city" placeholder="City" class="form-control" value="City">
          </div>

          <button class="btn btn-success">
            Create Neighborhood
          </button>
          or
          <a href="/neighborhoods">Cancel</a>
        </form>
      </dd>
    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/neighborhoods" class="btn btn-primary">
        Back
      </a>
      <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
